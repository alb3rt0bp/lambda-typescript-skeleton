{
    "compilerOptions": {
        "target": "es6",
        "watch": false,
        "outFile": "dist/bundle.js",
        "rootDirs": ["./app", "./config", "./utils"],
        "allowJs": true,
        "lib": ["es2015","dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "tests",
        "dist",
        "gulpfile.ts",
        "node_modules"
    ]
}
