{
    "compilerOptions": {
        "target": "es6",
        "watch": false,
        "outDir": "dist/",
        "rootDirs": ["./app", "./config", "./utils", "./models"],
        "allowJs": true,
        "lib": ["es2015","dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
        //"declaration": true
    },
    "include": [
        "**/*.ts",
        "**/*.json"
    ],
    "exclude": [
        "tests",
        "dist",
        "gulpfile.ts",
        "node_modules",
        "sonarRunner.ts",
        "jasmine.json",
        "tsconfig.json",
        "tsconfig.reference.json",
        "package-lock.json",
        "package.json"
    ]
}
